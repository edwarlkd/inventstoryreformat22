<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#3e8bc0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Organization"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mycustombutton"
        android:textColor="@color/colorPrimary"
        android:onClick="onAddingButton"
        android:padding="10dp"
        android:text="Add"
        android:id="@+id/BAddInven"
        android:layout_below="@+id/Blogin"
        android:layout_centerHorizontal="true"
        android:layout_gravity="right" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mycustombutton"
        android:textColor="@color/colorPrimary"
        android:onClick="onSelectButton"
        android:padding="10dp"
        android:text="Select"
        android:id="@+id/Bselect"
        android:layout_below="@+id/Blogin"
        android:layout_centerHorizontal="true"
        android:layout_gravity="right" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/Bbackorg"
        android:onClick="onClickBackorg" />


</LinearLayout>